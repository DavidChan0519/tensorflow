{
    "linters": {
        "clang-format": {
            "type": "clang-format",
            "include": "(^tensorflow/compiler/plugin/poplar/.*\\.(c|cpp|C|cc|c\\+\\+|cxx|h|hpp)$)"
        },
        "yapf": {
            "type": "yapf",
            "yapf.style": "{based_on_style: pep8, indent_width: 2}",
            "bin": ["./.linters/yapf"],
            "include": [
                "(^tensorflow/compiler/plugin/poplar/.*\\.py$)",
                "(^tensorflow/python/ipu/.*\\.py$)",
                "(^tensorflow/contrib/ipu/.*\\.py$)",
                "(^tensorflow/python/ops/poplar/.*\\.py$)"
            ]
        }
    }
}
