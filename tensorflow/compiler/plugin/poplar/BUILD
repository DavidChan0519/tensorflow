    deps = [
        ":test_utils_py",
        ":ipu_ops_py",
        "//tensorflow/compiler/tests:xla_test",
        "//tensorflow/python:array_ops",
        "//tensorflow/python:constant_op",
        "//tensorflow/python:nn_ops",
    ],
    srcs_version = "PY2AND3",
)

